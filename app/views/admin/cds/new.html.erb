<h1>CD一覧</h1>

 <%= form_for @cd do |f| %>

         <div class="field row">
           <label>ジャケット</label>
           <%= f.attachment_field :image, placeholder: "ジャケット写真" %>
         </div>

         <div class="field row">
           <%= f.label :Title %><br>
           <%= f.text_field :title, class: "col-xs-12" %>
         </div>

         <div class="field row">
           <%= f.label :値段 %><br>
           <%= f.text_area :price, class: "col-xs-12" %>
         </div>

         <div class="field row">
           <%= f.label :ジャンル %><br>
           <%= f.text_area :genre, class: "col-xs-12" %>
         </div>

         <div class="field row">
           <%= f.label :在庫 %><br>
           <%= f.text_area :stock, class: "col-xs-12" %>
         </div>

         <div class="field row">
           <%= f.label :リリース日 %><br>
           <%= f.text_area :release, class: "col-xs-12" %>
         </div>

         <div class="actions row">
           <%= f.submit ' Create Book ', class: "btn col-xs-12"%>
         </div>
       <% end %>